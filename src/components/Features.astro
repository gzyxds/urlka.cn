// 图标缓存，避免重复创建
const iconCache = new Map();

// 根据 Material Icons 名称返回对应的 iconify 图标名称
function getMaterialIcon(name: string): string {
  if (iconCache.has(name)) {
    return iconCache.get(name) as string;
  }
  
  const iconMap: Record<string, string> = {
    'phone': 'mdi:phone',
    'satellite_alt': 'mdi:satellite-variant',
    'cell_tower': 'mdi:signal',
    'tv': 'mdi:television',
    'payments': 'mdi:cash',
    'sim_card': 'mdi:sim-card',
    'data_usage': 'mdi:chart-line',
    'inventory_2': 'mdi:package-variant',
    'local_shipping': 'mdi:truck',
    'support_agent': 'mdi:headset',
    'smartphone': 'mdi:cellphone',
    'verified': 'mdi:check-circle',
    'rocket_launch': 'mdi:rocket',
    'analytics': 'mdi:chart-bar',
    'upgrade': 'mdi:arrow-up-circle',
    'public': 'mdi:earth',
    'groups': 'mdi:account-group',
    'security': 'mdi:shield-check',
    'visibility': 'mdi:eye',
    'star': 'mdi:star',
    'business_center': 'mdi:office-building',
    'desktop_windows': 'mdi:desktop-mac',
    'build': 'mdi:tools',
    'support': 'mdi:help-circle',
  };
  
  const icon = iconMap[name] || 'mdi:help-circle';
  iconCache.set(name, icon);
  return icon;
}

