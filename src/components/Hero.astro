<script>
  // 页面加载完成后执行动态数据更新
  document.addEventListener('DOMContentLoaded', function() {
    // 生成今日订单数量 (5350-11500之间的随机数)
    const dailyOrders = Math.floor(Math.random() * (11500 - 5350) + 5350);

    // 生成增长率 (8%-15%之间的随机数，保留一位小数)
    const growthRate = (Math.random() * (15 - 8) + 8).toFixed(1);

    // 更新DOM元素
    const dailyOrdersElement = document.getElementById('daily-orders');
    const growthRateElement = document.getElementById('growth-rate');

    if (dailyOrdersElement) {
      // 使用递增模式动画效果 - 每次+1
      animateNumber(dailyOrdersElement, 0, dailyOrders, 1500, 0, true);
    }

    if (growthRateElement) {
      // 延迟显示增长率，使用缓动模式增加视觉层次感
      setTimeout(() => {
        animateNumber(growthRateElement, 0, parseFloat(growthRate), 1000, 1, false);
      }, 800);
    }
  });

  /**
   * 数字动画函数 - 支持递增模式和缓动模式
   * @param {HTMLElement} element - 要更新的DOM元素
   * @param {number} start - 起始数值
   * @param {number} end - 结束数值
   * @param {number} duration - 动画持续时间(毫秒)
   * @param {number} decimals - 小数位数
   * @param {boolean} useIncrement - 是否使用递增模式
   */
  function animateNumber(element: HTMLElement, start: number, end: number, duration: number, decimals: number = 0, useIncrement: boolean = false): void {
    if (useIncrement) {
      // 递增模式：每次+1，直到达到目标值
      animateNumberIncrement(element, start, end, duration, decimals);
    } else {
      // 缓动模式：使用平滑的缓动函数
      animateNumberSmooth(element, start, end, duration, decimals);
    }
  }

  /**
   * 递增模式动画函数 - 每次+1
   * @param {HTMLElement} element - 要更新的DOM元素
   * @param {number} start - 起始数值
   * @param {number} end - 结束数值
   * @param {number} duration - 动画持续时间(毫秒)
   * @param {number} decimals - 小数位数
   */
  function animateNumberIncrement(element: HTMLElement, start: number, end: number, duration: number, decimals: number = 0): void {
    const totalSteps: number = end - start;
    const stepDuration: number = duration / totalSteps; // 每一步的时间间隔
    let currentValue: number = start;

    function incrementStep(): void {
      if (currentValue < end) {
        currentValue += 1;

        if (decimals > 0) {
          element.textContent = currentValue.toFixed(decimals);
        } else {
          element.textContent = currentValue.toString();
        }

        // 设置下一次递增的时间
        setTimeout(incrementStep, stepDuration);
      }
    }

    // 开始递增动画
    incrementStep();
  }

  /**
   * 缓动模式动画函数 - 平滑过渡
   * @param {HTMLElement} element - 要更新的DOM元素
   * @param {number} start - 起始数值
   * @param {number} end - 结束数值
   * @param {number} duration - 动画持续时间(毫秒)
   * @param {number} decimals - 小数位数
   */
  function animateNumberSmooth(element: HTMLElement, start: number, end: number, duration: number, decimals: number = 0): void {
    const startTime: number = performance.now();
    const difference: number = end - start;

    /**
     * 更新数字显示的内部函数
     * @param {number} currentTime - 当前时间戳
     */
    function updateNumber(currentTime: number): void {
      const elapsed: number = currentTime - startTime;
      const progress: number = Math.min(elapsed / duration, 1);

      // 使用缓动函数让动画更自然
      const easeOutQuart: number = 1 - Math.pow(1 - progress, 4);
      const current: number = start + (difference * easeOutQuart);

      if (decimals > 0) {
        element.textContent = current.toFixed(decimals);
      } else {
        element.textContent = Math.floor(current).toString();
      }

      if (progress < 1) {
        requestAnimationFrame(updateNumber);
      }
    }

    requestAnimationFrame(updateNumber);
  }
</script>

