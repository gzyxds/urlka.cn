// 优化视觉层次感、响应式布局和用户体验
import FuzzyText from '../components/Fuzzytext/Fuzzytext.astro';
import Modalwith from './Modalwith.astro';
---

<!-- ====== 172号卡Hero Section Start - 2026版设计 -->
<section
  id="home"
  class="relative isolate overflow-hidden bg-white pt-[30px] md:pt-[40px] lg:pt-[50px] pb-0 md:pb-1 lg:pb-2 min-h-screen"
>
  <!-- 现代化背景装饰 - SVG网格背景 -->
  <svg aria-hidden="true" class="absolute inset-0 -z-10 size-full mask-[radial-gradient(100%_100%_at_top_right,white,transparent)] stroke-gray-200">
    <defs>
      <pattern id="hero-grid-pattern" width="200" height="200" x="50%" y="-1" patternUnits="userSpaceOnUse">
        <path d="M.5 200V.5H200" fill="none" />
      </pattern>
    </defs>
    <svg x="50%" y="-1" class="overflow-visible fill-gray-50">
      <path d="M-200 0h201v201h-201Z M600 0h201v201h-201Z M-400 600h201v201h-201Z M200 800h201v201h-201Z" stroke-width="0" />
