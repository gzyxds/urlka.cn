        {
          menuitems.map((item, index) => {
            if(!item.children) {
              return (
                <a 
                  href={item.path}
                  class="nav-link whitespace-nowrap"
                >
                  {item.title}
                </a>
              )
            }
          
            if(item.children) {
              const menuKey = item.title === "产品服务" ? "showProductMenu" : 
